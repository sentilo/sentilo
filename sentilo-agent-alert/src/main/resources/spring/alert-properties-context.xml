<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<beans profile="dev">
		<context:property-placeholder location="classpath*:properties/catalog-config.properties"
			ignore-unresolvable="true" />
		<context:property-placeholder location="classpath*:properties/jedis-config.properties"
			ignore-unresolvable="true" />
		<context:property-placeholder location="classpath*:properties/platform-client-config.properties"
			ignore-unresolvable="true" />	
	</beans>

</beans>